@model WebLojaGamesMVC.Models.Funcionario
@{
    ViewBag.Title = "Funcionário";
}

<h2>Cadastro de Funcionários</h2>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <form action="~/funcionario/listar" method="post">
        <fieldset>
            <legend>Dados do Funcionário</legend>
            <div class="editor-label">
                @Html.LabelFor(model => model.FuncCod)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.FuncCod)
                @Html.ValidationMessageFor(model => model.FuncCod)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.FuncNome)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.FuncNome)
                @Html.ValidationMessageFor(model => model.FuncNome)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.FuncCPF)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.FuncCPF)
                @Html.ValidationMessageFor(model => model.FuncCPF)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.FuncRG)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.FuncRG)
                @Html.ValidationMessageFor(model => model.FuncRG)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.FuncNasc)
            </div>
            <div class="editor-field">
                <input type="date" value="@Model.FuncNasc" name="FuncNasc" />
                @Html.ValidationMessageFor(model => model.FuncNasc)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.FuncEnd)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.FuncEnd)
                @Html.ValidationMessageFor(model => model.FuncEnd)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.FuncCel)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.FuncCel)
                @Html.ValidationMessageFor(model => model.FuncCel)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.FuncEmail)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.FuncEmail)
                @Html.ValidationMessageFor(model => model.FuncEmail)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.FuncCargo)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.FuncCargo)
                @Html.ValidationMessageFor(model => model.FuncCargo)
            </div>
        </fieldset>

        <div>
            <br /> <input type="submit" value="Enviar" />
        </div>
    </form>
}
